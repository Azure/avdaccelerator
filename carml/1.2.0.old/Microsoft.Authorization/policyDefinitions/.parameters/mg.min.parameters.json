{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "name": {
            "value": "<<namePrefix>>-mg-min-policyDef"
        },
        "policyRule": {
            "value": {
                "if": {
                    "allOf": [
                        {
                            "equals": "Microsoft.KeyVault/vaults",
                            "field": "type"
                        }
                    ]
                },
                "then": {
                    "effect": "[parameters('effect')]"
                }
            }
        },
        "parameters": {
            "value": {
                "effect": {
                    "allowedValues": [
                        "Audit"
                    ],
                    "defaultValue": "Audit",
                    "type": "String"
                }
            }
        }
    }
}
